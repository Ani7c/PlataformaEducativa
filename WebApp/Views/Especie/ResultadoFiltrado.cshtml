@model IEnumerable<EcosistemasMarinos.Entidades.EspecieMarina>

@{
    ViewData["Title"] = "ResultadoFiltrado";
}


@if (Model.Count() <= 0)
{
    <div class="alert alert-warning">
        No hay especies disponibles
    </div>
}

<h1>ResultadoFiltrado</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCientifico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreVulgar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadoConservacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgEspecie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCientifico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreVulgar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoConservacion.Nombre)
            </td>
            <td>
                <img class="img-thumbnail" src="~/img/Especies/@item.ImgEspecie" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
